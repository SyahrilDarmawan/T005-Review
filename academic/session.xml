<odoo>
<data>

    
    <record id="session_graph" model="ir.ui.view">
        <field name="name">session_graph</field>
        <field name="model">academic.session</field>
        <field name="arch" type="xml">
            <graph string="Session" type="bar">
                <field name="instructor_id"/>
                <field name="seats" operator="+"/>
            </graph>
        </field>
    </record>



    <record id="session_kanban" model="ir.ui.view">
        <field name="name">session_kanban</field>
        <field name="model">academic.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by="course_id">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette">
                            <a type="open">
                                <img t-att-src="kanban_image('academic.session', 'image_small', record['id'])"
                                    class="o_kanban_image"/>
                            </a>
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                                <ul>
                                    <li>Seats: <field name="seats"/></li>
                                    <li>Taken Seats: <field name="taken_seats"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <!--Calendar list-->
    <record id="session_cal" model="ir.ui.view">
        <field name="name">session_calendar</field>
        <field name="model">academic.session</field>
        <field name="arch" type="xml">

            <calendar string="Session" date_start="start_date" color="course_id">
                <field name="name" />
            </calendar>

        </field>
    </record>



    <!--tree session list-->
    <record id="view_academic_session_tree" model="ir.ui.view">
        <field name="name">academic.session.tree</field>
        <field name="model">academic.session</field>
        <field name="type">tree</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Session"
                decoration-danger="taken_seats&gt;50"
                decoration-success="taken_seats&lt;20"
            >
                <field name="name"/>
                <field name="instructor_id"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="seats"/>
                <field name="taken_seats" widget="progressbar"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- tree Form list-->
    <record id="view_academic_session_form" model="ir.ui.view">
        <field name="name">academic.session.form</field>
        <field name="model">academic.session</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Session">
                <div class="oe_title">
                    <label for="name" class="oe_edit_only" string="Session Name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>

                <group>
                    <!-- Kolom kiri -->
                    <group>
                        <field name="course_id"/>           <!-- garis " | " merupakan tanda pemisah sebuah domain, dan jangan lupa pake spasinya-->
                        <field name="instructor_id" domain="['|', ('is_instructor','=',True), ('category_id','=','Instruktur')]"/>
                        <field name="start_date"/>
                         <field name="image_small" widget="image" class="oe_avatar"/>
                    </group>

                    <!--Kolom Kanan -->
                    <group>
                        <field name="duration"/>
                        <field name="seats"/>
                        <field name="taken_seats" widget="progressbar"/>
                        <field name="active"/>
                    </group>
                </group>


                <notebook>
                    <page string="Attendees">
                        <field name="attendee_ids">
                            <tree>
                                <field name="name"/>
                                <field name="session_id"/>
                                <field name="partner_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</data>
</odoo>
